{
    "compilerOptions": {
        "strict": true,
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "types",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "jsx": "react",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.stories.tsx",
        "src/**/*.test.tsx"
    ]
}